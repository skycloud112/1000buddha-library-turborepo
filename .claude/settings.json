{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs -I {} pnpm exec prettier --write \"{}\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "SlashCommand(/deploy-summary)",
      "Skill(ast-grep:ast-grep)",
      "mcp__mongodb__*",
      "mcp__neon__*"
    ],
    "deny": [],
    "ask": []
  }
}
